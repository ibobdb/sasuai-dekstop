{
  "appId": "com.sasuai.store",
  "files": ["dist-electron", "dist-react"],
  "extraResources": ["dist-electron/preload.cjs"],
  "icon": "./templateIcon.png",
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": ["portable", "msi"]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "./templateIcon.png",
    "uninstallerIcon": "./templateIcon.png",
    "uninstallDisplayName": "Sasuai Store",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Sasuai Store"
  }
}
